<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_load_more_height"
    android:orientation="vertical"
    android:background="@drawable/cell_article_bg"
    android:padding="@dimen/padding"
    android:gravity="center" >
    
    <TextView
        android:id="@+id/view_load_more_tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_loading"
        android:textColor="@color/text_color" />

    <ProgressBar
        android:id="@+id/view_load_more_progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@android:style/Widget.ProgressBar.Inverse" />


    <TextView
        android:id="@+id/view_load_more_tv_load_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_load_more_height"
        android:gravity="center"
        android:text="@string/button_load_more"
        android:visibility="gone"
        android:textColor="@color/text_color"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>